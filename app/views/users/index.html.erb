<h1>Listing Users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
	<th>Group</th>
    <th>Active?</th>
    <th>Admin?</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.name %></td>
    <td><%=h user.email %></td>
	<td><%=h user.group.name %></td>
	<td><%=h user.active? %></td>
    <td><%=h user.is_admin %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

