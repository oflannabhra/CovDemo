<h1>Reset your Password:</h1>
<%= form_for @user, :url => reset_password_url do |f| %>
<p>
	<%= f.label :password %>
</br>
	<%= f.password_field :password %>
</p>
<p>
	<%= f.label :password_confirmation %>
</br>
	<%= f.password_field :password_confirmation %>
</p>
<%= f.submit "Reset Password and Log in" %>
<% end %>